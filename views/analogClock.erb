<!DOCTYPE html>
<html>
<head>
  <title>Analog Clock</title> 
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
</head>
<body>

  <div id="face">

    <div id="centerDot"><span>&middot</span></div>

    <div id="hourHand"></div>    
    <div id="minuteHand"></div>    
    <div id="secondHand"></div>

    <div class="number one">1</div>
    <div class="number two">2</div>
    <div class="number three">3</div>
    <div class="number four">4</div>
    <div class="number five">5</div>
    <div class="number six">6</div>
    <div class="number seven">7</div> 
    <div class="number eight">8</div>
    <div class="number nine">9</div>
    <div class="number ten">10</div>
    <div class="number elleven">11</div>
    <div class="number twelve">12</div>

  </div>

<style>

* {
  box-sizing: border-box;
}

span {
  display: inline-block;
  position: absolute;
    top: 50%;
    left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}

#centerDot {
  font-size: 20vmin;
  height: 50%;
  width: 100%;
  position: absolute;
    top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  z-index: 4;
}

#face {
  height: 80vmin;
  width: 80vmin;
  border: .5vmin solid black;
  border-radius: 100%; 
  position: absolute;
    top: 50%;
    left: 50%;
  -webkit-transform: translate(-50%, -50%); 
          transform: translate(-50%, -50%); 
  background-color: #CEDAEF;
}

#hourHand {  
  background-color: black;
  width: 1vmin;
  height: 30%;
  position: absolute;
    top: 15.8vmin;
    left: 39vmin;
  -webkit-transform-origin: center bottom 0;
          transform-origin: center bottom 0;
  border: .1vmin solid black;
  border-radius: 100% 100% 0 0;
  z-index: 3;
}

#minuteHand {  
  background-color: black;
  width: .5vmin;   
  height: 32vmin;  
  position: absolute;
    top: 7.5vmin;
    left: 39.25vmin;   
  -webkit-transform-origin: center bottom 0;
          transform-origin: center bottom 0;
  border: .1vmin solid black;
  border-radius: 100% 100% 0 0;
  z-index: 2;
}

#secondHand {
  background-color: red;
  width: .4vmin;  
  height: 50%;
  position: absolute;
    top: 0;
    left: 39.3vmin;  
  -webkit-transform-origin: center bottom 0;
          transform-origin: center bottom 0;
  border: .1vmin solid red;
  border-radius: 100% 100% 0 0;
  z-index: 1;
}

.number {
  height: 50%;
  width: 20vmin;
  position: absolute;
  top: 0;
  left: 50%; 
  font-size: 7vmin;
  text-align: center;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  -webkit-transform-origin: center bottom 0;
          transform-origin: center bottom 0;
  padding-top: 2vmin;
  color: blue; 
}

.one {
  -webkit-transform: rotate(30deg) translate(-8.7vmin, 5vmin);
          transform: rotate(30deg) translate(-8.7vmin, 5vmin);        
}

.two {
  -webkit-transform: rotate(60deg) translate(-5vmin, 8.7vmin);
          transform: rotate(60deg) translate(-5vmin, 8.7vmin);
}

.three {
  -webkit-transform: rotate(90deg) translateY(10vmin);
          transform: rotate(90deg) translateY(10vmin);
}

.four {
  -webkit-transform: rotate(120deg) translate(5vmin, 8.7vmin);
          transform: rotate(120deg) translate(5vmin, 8.7vmin);
}

.five {
  -webkit-transform: rotate(150deg) translate(8.7vmin, 5vmin);
          transform: rotate(150deg) translate(8.7vmin, 5vmin);
}
 
.six {
  -webkit-transform: rotate(180deg) translateX(10vmin);
          transform: rotate(180deg) translateX(10vmin);
}

.seven {
  -webkit-transform: rotate(-150deg) translate(8.7vmin, -5vmin) ;  
          transform: rotate(-150deg) translate(8.7vmin, -5vmin) ;
}

.eight {
  -webkit-transform: rotate(-120deg) translate(5vmin, -8.7vmin);
          transform: rotate(-120deg) translate(5vmin, -8.7vmin);
}

.nine {
  -webkit-transform: rotate(-90deg)translateY(-10vmin);
          transform: rotate(-90deg)translateY(-10vmin);
}

.ten {
  -webkit-transform: rotate(-60deg) translate(-5vmin, -8.7vmin);
          transform: rotate(-60deg) translate(-5vmin, -8.7vmin);
}

.elleven {
  -webkit-transform: rotate(-30deg) translate(-8.7vmin, -5vmin);
          transform: rotate(-30deg) translate(-8.7vmin, -5vmin);
}

</style>

<script>

function clock() {

  var nowDate = new Date(); 

  var m = nowDate.getMilliseconds();

  var c = nowDate.getSeconds();
  var d = ( 6 * c ) + 6 * ( m / 1000 );
  $('#secondHand').css('transform', 'rotate(' + d + 'deg)');

  var a = nowDate.getMinutes();
  var b = ( 6 * a ) + 6 * ( c / 60 ) + 6 * ( m / 60000 );
  $('#minuteHand').css('transform', 'rotate(' + b + 'deg)');  

  var x = nowDate.getHours() % 12;
  var y = ( 30 * x ) + 30 * ( a / 60 ) + 30 * ( c / 3600 ) + 30 * ( m / 3600000);
  $('#hourHand').css('transform', 'rotate(' + y + 'deg)');
  
}
setInterval(clock, 1);

</script>

</body>
</html>